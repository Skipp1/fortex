%
%    \begin{macrocode}
  \iow_open:Nn \c_@@_outfile_iow { #2 }
  \iow_now:NV  \c_@@_outfile_iow { \l_tmpa_tl }
  \iow_now:NV  \c_@@_outfile_iow { \l_tmpb_tl }
  \iow_close:N \c_@@_outfile_iow
}

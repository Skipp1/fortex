    \seq_gpush:Nx \g_@@_ignoreactive_charcodes_seq { \token_to_str:N #3 }
    \int_new:c   { g_@@_default_#3_catcode_int }
    \int_gset:cn { g_@@_default_#3_catcode_int } { 
      \char_value_catcode:n { `#3 }
    }
